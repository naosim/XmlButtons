<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- normal -->
	<item android:state_pressed="false" android:state_enabled="true">
	    <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="1dp" android:color="#9cd" />
            <corners android:radius="1dp" />
            <solid android:color="#ade"/>
        </shape>
	</item>
	
	<!-- pressed -->
    <item android:state_pressed="true" android:state_enabled="true">
		<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="1dp" android:color="#ade" />
            <corners android:radius="1dp" />
            <solid android:color="#bef"/>
        </shape>
	</item>
	
	<!-- disable -->
	<item android:state_pressed="false" android:state_enabled="false"> 
	    <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="1dp" android:color="#8bc" />
            <corners android:radius="1dp" />
            <solid android:color="#9cd"/>
        </shape>
	</item>
</selector>